{
  "version": 2,
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/", "dest": "/index.html" },
    { "src": "/applications", "dest": "/index.html" },
    { "src": "/vulnerabilities", "dest": "/index.html" },
    { "src": "/callback", "dest": "/index.html" },
    { "src": "/account", "dest": "/index.html" },

    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "functions": {
    "api/*.ts": {
      "memory": 1024,
      "maxDuration": 15
    }
  }
}