{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/health",
      "destination": "/api/health"
    },
    {
      "source": "/api/applications",
      "destination": "/api/applications"
    },
    {
      "source": "/api/vulnerabilities",
      "destination": "/api/vulnerabilities"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}